<div class="twitter-auth" i18n:domain="zojax.authentication.twitter">
    <tal:block define="site modules/zope/app/component/hooks/getSite;
                     siteURL site/@@absolute_url;">
      <a tal:attributes="href string:$siteURL/@@twitterSignIn"
         title="Sign in with Twitter"
         i18n:attributes="title">
        <img tal:attributes="src string:$siteURL/@@/zojax-authentication-twitter-images/twitter.png"
             alt="Sign in with Twitter"
             i18n:attributes="alt" />             
      </a>
    </tal:block>
</div>
