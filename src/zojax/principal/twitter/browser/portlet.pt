<div class="z-portlet portlet-twitter-sign-in" i18n:domain="zojax.authentication.twitter">
    <div class="z-portlet-item"
         tal:define="site modules/zope/app/component/hooks/getSite;
                     siteURL site/@@absolute_url;">
      <a tal:attributes="href string:$siteURL/@@twitterSignIn"
         title="Sign in with Twitter"
         i18n:attributes="title">
        <img tal:attributes="src string:$siteURL/@@/zojax-authentication-twitter-images/sign-in-with-twitter.png"
             alt="Sign in with Twitter"
             i18n:attributes="alt" />             
      </a>
    </div>
</div>
